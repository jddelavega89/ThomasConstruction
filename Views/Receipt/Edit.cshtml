@model ThomasConstruction.ViewModels.ReceiptViewModel
@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Receipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="row g-2 needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_receipt" />
            <div class="form-group mb-2">
                <label asp-for="receipt_date" class="control-label"></label>
                <input asp-for="receipt_date" class="form-control" id="validationCustom01" required />
                <span asp-validation-for="receipt_date" class="text-danger"></span>
            </div>
           
            <div class="form-group">
            <label asp-for="id_project"></label>
                <!-- Dropdown con los estados -->
           <select asp-for="id_project" class="form-select" id="validationCustom02" required name="id_project" asp-items="Model.projects")">
            <option value="">-- Select Project --</option>
            </select>
            <span asp-validation-for="id_project" class="text-danger"></span>
            </div>

              <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" id="validationCustom03" required/>
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="details" class="control-label"></label>
                <input asp-for="details" class="form-control" />
                <span asp-validation-for="details" class="text-danger"></span>
            </div>

                       
            <div class="form-group">
               <div class="d-flex justify-content-end gap-2 mt-4">
                <input type="submit" value="Save" class="btn btn-success" />
                 <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script src="~/js/validation.js"></script>
}
