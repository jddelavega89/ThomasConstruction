@model ThomasConstruction.ViewModels.CustomerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

@if (TempData["ErrorMessage"] != null) 
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Customer Details</h4>
         <div class="d-flex gap-2">
            <a asp-action="Edit" class="btn btn-light btn-sm" asp-route-id="@Model?.id_customer">Edit</a>
            <a asp-action="Index" class="btn btn-light btn-sm">← Back to List</a>
            </div>
        </div>
        <div class="card-body">

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.customer_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.customer_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.city)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.zip_code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.zip_code)
        </dd>

         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.state)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
    </dl>
</div>
<div>
    </div>
    
</div>
