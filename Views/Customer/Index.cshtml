@model IEnumerable<ThomasConstruction.Models.CustomerModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Customers List</h4>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
</p>
<table id="customerTable" class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.customer_name)
            </th>
           
            <th  scope="col">
                @Html.DisplayNameFor(model => model.phone)
            </th>
           
             <th  scope="col">
                @Html.DisplayNameFor(model => model.city)
            </th>
            

             <th  scope="col">
                @Html.DisplayNameFor(model => model.state.state_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customer_name)
            </td>

             <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.state.state_name)
            </td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.id_customer">Edit</a> |
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.id_customer">Details</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.id_customer">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table> 

@section Scripts {
   <script>
    $(document).ready(function () {
        $('#customerTable').DataTable({
           
            "pageLength": 5,
            "lengthChange": false 
        });
    });
</script>
}

