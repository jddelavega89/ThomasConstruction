@model ThomasConstruction.Models.WorkerModel
@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Worker</h4> 


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_worker" />
            <div class="form-group mb-2">
                <label asp-for="worker_name" class="control-label"></label>
                <input asp-for="worker_name" class="form-control" id="validationCustom02" required />
                <span asp-validation-for="worker_name" class="text-danger"></span>
            </div>
           
           

             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="active" /> @Html.DisplayNameFor(model => model.active)
                </label>
            </div>
            
            <div class="form-group">
               <div class="d-flex justify-content-end gap-2 mt-4">
                <input type="submit" value="Save" class="btn btn-success" />
                 <a class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/validation.js"></script>
}
